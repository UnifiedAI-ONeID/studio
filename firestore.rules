
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return getUserData(request.auth.uid).role == 'admin';
    }

    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    match /events/{eventId} {
      allow read: if resource.data.status == 'published' && resource.data.approvalStatus == 'approved' && resource.data.visibility == 'public';
      allow create: if isSignedIn()
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.approvalStatus == 'pending';
      allow update: if (isOwner(request.resource.data.createdBy) && resource.data.approvalStatus == 'pending') || isAdmin();
      allow delete: if isOwner(request.resource.data.createdBy) || isAdmin();
    }

    match /venues/{venueId} {
      allow read: if resource.data.verified == true;
      allow create: if isSignedIn() 
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.verified == false;
      allow update: if (isOwner(resource.data.createdBy) && resource.data.verified == false) || isAdmin();
      allow delete: if isOwner(resource.data.createdBy) || isAdmin();
    }
    
    match /threads/{threadId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.createdBy) && request.resource.data.title.size() < 100 && request.resource.data.body.size() < 10000;
      allow update: if (isOwner(resource.data.createdBy) || isAdmin()) && request.resource.data.title.size() < 100 && request.resource.data.body.size() < 10000;
      allow delete: if isOwner(resource.data.createdBy) || isAdmin();
    }
    
    match /threads/{threadId}/comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn() && isOwner(request.resource.data.createdBy) && request.resource.data.body.size() < 5000;
        allow update: if (isOwner(resource.data.createdBy) || isAdmin()) && request.resource.data.body.size() < 5000;
        allow delete: if isOwner(resource.data.createdBy) || isAdmin();
    }

    match /reports/{reportId} {
        allow create: if isSignedIn() && isOwner(request.resource.data.createdBy);
        allow read, write: if isAdmin();
    }
  }
}
