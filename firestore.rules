rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // In a real app, you would have a more robust way to check for admins.
      // This is a placeholder for demonstration purposes.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(ownerId) {
        return request.auth.uid == ownerId;
    }
    
    function incomingData() {
      return request.resource.data;
    }

    function existingData() {
      return resource.data;
    }

    // --- Rules ---

    // Users can only read their own profile, but can see basic info of others
    match /users/{userId} {
      allow read: if true;
      allow create: if isUser(userId);
      allow update: if isUser(userId);
      allow delete: if isUser(userId) || isAdmin();
    }
    
    // Events are public to read
    match /events/{eventId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if (isSignedIn() && isOwner(existingData().hostId)) || isAdmin();
      allow delete: if (isSignedIn() && isOwner(existingData().hostId)) || isAdmin();
    }
    
    // Venues are public to read
    match /venues/{venueId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if (isSignedIn() && isOwner(existingData().createdBy)) || isAdmin();
    }
    
    // Commons threads are public to read
    match /commonsThreads/{threadId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(incomingData().authorId);
      allow update: if (isOwner(existingData().authorId) || isAdmin()) && incomingData().createdAt == existingData().createdAt;
      allow delete: if isOwner(existingData().authorId) || isAdmin();
    }

    // Replies are public to read
    match /commonsReplies/{replyId} {
        allow read: if true;
        allow create: if isSignedIn() && isOwner(incomingData().authorId);
        allow update: if (isOwner(existingData().authorId) || isAdmin()) && incomingData().createdAt == existingData().createdAt;
        allow delete: if isOwner(existingData().authorId) || isAdmin();
    }

    // Interactions require a user to be logged in
    match /eventInteractions/{interactionId} {
      allow read: if isSignedIn() && isUser(resource.data.userId);
      allow create, update: if isSignedIn() && isUser(incomingData().userId);
      allow delete: if isSignedIn() && isUser(resource.data.userId);
    }
    
    // Follows require a user to be logged in
    match /follows/{followId} {
        allow read: if isSignedIn() && isUser(resource.data.followerUserId);
        allow create: if isSignedIn() && isUser(incomingData().followerUserId);
        allow delete: if isSignedIn() && isUser(resource.data.followerUserId);
    }
    
    match /reports/{reportId} {
        allow create: if isSignedIn() && isOwner(incomingData().createdBy);
        allow read, update, delete: if isAdmin();
    }
  }
}
